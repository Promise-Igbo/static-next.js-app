# WhiteSource Configuration File for Next.js

# Project Information
ws.projectName=static-next.js-app
# ws.organizationName=MyOrganization

# Package manager detection (specific to Next.js)
ws.detect.packageManager=npm

# Set minimum severity level for vulnerabilities (LOW, MEDIUM, HIGH, CRITICAL)
ws.minSeverity=HIGH

# Notification settings (How you want to receive alerts)
ws.notifications.githubIssues=true
ws.notifications.email=false

# Exclude unnecessary files and folders from scanning
ws.filesToExclude=node_modules/**, .next/**, .vercel/**, test/**, public/**

# Enable security and license scanning
ws.scan.security=true
ws.scan.licenses=true

# Optional: Ignore DevDependencies (if you only want to scan production dependencies)
ws.ignoreDevDependencies=true
